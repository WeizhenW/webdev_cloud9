<% include partials/headers %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">MinnePlayground</a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav navbar-right">
            <li class="nav-item active">
                <a class="nav-link" href="/">Login<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">Sign Up</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">Logout</a>
            </li>
        </ul>
        <!--<span class="navbar-text">-->
        <!--Navbar text with an inline element-->
        <!--</span>-->
    </div>
</nav>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to the MinnePlayground website!</h1>
        <p>View the best indoor playgrounds across the twin cities area</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/playgrounds/new" role="button">Add a new playground!</a>
        </p>
    </header>
    
    <div class="row text-center">
        <% playgrounds.forEach(function(playground) { %>
            <div class="col-md-4 col-sm-6">
                <div class="img-thumbnail">
                    <img class="img-fluid" src = "<%= playground.image %>" alt = "<%= playground.name %>">
                    <div class="caption">
                        <h4><%= playground.name %></h4>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

</div>


